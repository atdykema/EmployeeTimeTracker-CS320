                "application/json" : {
                  "schema" : {
                    "type" : "object",
                    "properties" : {
                      "response" : {
                        "type" : "string",
                        "example" : "FAILURE: timeOption error."
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
